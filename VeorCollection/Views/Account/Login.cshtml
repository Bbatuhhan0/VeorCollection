@{
    Layout = "AnaLayout";
}

<style>
    /* Giriş Sayfası Özel Stilleri */
    .login-section {
        position: relative;
        /* DÜZELTME: Üst boşluk 150px'den 60px'e düşürüldü */
        padding: 60px 0 100px;
        background-color: #000000; /* Siyah zemin */
        min-height: 80vh;
    }

    .login-box {
        background-color: #111111; /* Kart rengi çok koyu gri */
        border: 1px solid #222;
        padding: 50px 40px;
        border-radius: 0; /* Keskin hatlar tema ile uyumlu */
        box-shadow: 0 0 30px rgba(218, 189, 130, 0.1); /* Hafif altın gölge */
    }

        .login-box h3 {
            color: #ffffff;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }

        .login-box p {
            color: #aaaaaa;
            margin-bottom: 30px;
        }

    /* Form Elemanları */
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            color: #ffffff;
            margin-bottom: 8px;
            font-weight: 500;
            display: block;
        }

    .form-control {
        background-color: #000000;
        border: 1px solid #333;
        color: #ffffff;
        height: 50px;
        padding: 10px 20px;
        border-radius: 0;
    }

        .form-control:focus {
            background-color: #000000;
            border-color: #dabd82; /* Odaklanınca altın rengi */
            color: #ffffff;
            box-shadow: none;
        }

    /* Buton Stili */
    .theme-btn-login {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #ffffff;
        display: inline-block;
        font-size: 14px;
        font-weight: 700;
        text-transform: uppercase;
        padding: 12px 30px;
        width: 100%;
        transition: all 0.3s ease;
        cursor: pointer;
        letter-spacing: 1px;
        margin-top: 10px;
    }

        .theme-btn-login:hover {
            background-color: #dabd82;
            border-color: #dabd82;
            color: #000000;
        }

    /* Linkler */
    .bottom-links {
        margin-top: 25px;
        border-top: 1px solid #222;
        padding-top: 20px;
        text-align: center;
    }

        .bottom-links p {
            margin-bottom: 10px;
            font-size: 14px;
        }

    .btn-outline-gold {
        color: #dabd82;
        border: 1px solid #dabd82;
        background: transparent;
        padding: 8px 20px;
        font-size: 13px;
        text-transform: uppercase;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

        .btn-outline-gold:hover {
            background-color: #dabd82;
            color: #000;
        }

    .back-home {
        color: #666;
        font-size: 13px;
        text-decoration: none;
        margin-top: 15px;
        display: inline-block;
        transition: 0.3s;
    }

        .back-home:hover {
            color: #dabd82;
        }
</style>

<section class="login-section">
    <div class="auto-container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 col-sm-12">

                <div class="login-box">
                    <div class="text-center">
                        <h3>Giriş Yap</h3>
                        <p>Hesabınıza erişmek için bilgilerinizi girin.</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center" style="background-color: #381212; border-color: #5c1818; color: #ffadad;">
                            @ViewBag.Error
                        </div>
                    }

                    <form action="/Account/Login" method="post">
                        <div class="form-group">
                            <label>E-Posta veya Kullanıcı Adı</label>
                            <input type="text" name="email" class="form-control" placeholder="Kullanıcı adınız..." required />
                        </div>

                        <div class="form-group">
                            <label>Şifre</label>
                            <input type="password" name="password" class="form-control" placeholder="******" required />
                        </div>

                        <button type="submit" class="theme-btn-login">GİRİŞ YAP</button>
                    </form>

                    <div class="bottom-links">
                        <p>Hesabınız yok mu?</p>
                        <a href="/Account/Register" class="btn-outline-gold">Kayıt Ol</a>
                        <br />
                        <a href="/" class="back-home">← Anasayfaya Dön</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>