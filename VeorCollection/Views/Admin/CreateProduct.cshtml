@model VeorCollection.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Yeni Ürün Ekle</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Ürün Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Örn: Desenli Gömlek" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Fiyat (TL)</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Ürün Resmi</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    <span class="text-muted small">Lütfen .jpg veya .png formatında resim yükleyin.</span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Kategori</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option value="">-- Kategori Seçiniz --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" asp-for="IsInStock" />
                    <label class="form-check-label">Stokta Var</label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Ürünü Ekle</button>
                    <a href="/Admin/Products" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>