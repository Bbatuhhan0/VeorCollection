@model VeorCollection.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Yeni Ürün Ekle</h2>
    <hr />
    <div class="row">
        <div class="col-md-9">
            <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label class="control-label fw-bold">Ürün Adı</label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: Desenli Gömlek" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label class="control-label fw-bold">Fiyat (TL)</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label class="control-label fw-bold">Ürün Resmi</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label class="control-label fw-bold">Kategori</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                            <option value="">-- Kategori Seçiniz --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="card mb-4 bg-light border-0">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-3">Ürün Özellikleri</h5>
                        <p class="small text-muted">Ürüne ait özellikleri işaretleyiniz.</p>
                        <hr />

                        @if (ViewBag.Attributes != null)
                        {
                            var attributes = ViewBag.Attributes as List<VeorCollection.Models.ProductAttribute>;
                            if (attributes != null && attributes.Any())
                            {
                                <div class="row">
                                    @foreach (var attr in attributes)
                                    {
                                        <div class="col-md-6 mb-3">
                                            <h6 class="fw-bold">@attr.Name</h6>
                                            <div class="d-flex flex-wrap gap-2">
                                                @foreach (var val in attr.Values)
                                                {
                                                    <div class="form-check me-3">
                                                        <input class="form-check-input" type="checkbox" name="selectedOptions" value="@val.Id" id="opt_@val.Id">
                                                        <label class="form-check-label" for="opt_@val.Id">
                                                            @val.Value
                                                        </label>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">Henüz hiç özellik eklenmemiş. Lütfen önce 'Özellik Yönetimi' sayfasından özellik ekleyin.</div>
                            }
                        }
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Stok Kodu (SKU)</label>
                    <input asp-for="SKU" class="form-control" placeholder="Örn: V-001" />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Kısa Açıklama</label>
                    <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Detaylı Ürün Açıklaması</label>
                    <textarea asp-for="FullDescription" id="summernote" class="form-control"></textarea>
                    <span asp-validation-for="FullDescription" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" asp-for="IsInStock" />
                    <label class="form-check-label">Stokta Var</label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg">Kaydet</button>
                    <a href="/Admin/Products" class="btn btn-secondary btn-lg">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        if ($('#summernote').length > 0) {
            $('#summernote').summernote({
                placeholder: 'Ürün detaylarını buraya yazın...',
                tabsize: 2,
                height: 300
            });
        }
    });
</script>