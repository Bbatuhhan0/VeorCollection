@model IEnumerable<VeorCollection.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Kategori Listesi</h2>
        <a href="/Admin/CreateCategory" class="btn btn-primary">+ Yeni Kategori Ekle</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Kategori Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="/Admin/DeleteCategory/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu kategoriyi silmek istediğine emin misin?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a href="/Admin/Index" class="btn btn-secondary">Admin Paneline Dön</a>
    </div>
</div>