@model VeorCollection.Models.Category

@{
    ViewData["Title"] = "Yeni Kategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Yeni Kategori Ekle</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateCategory" method="post">
                <div class="form-group mb-3">
                    <label class="control-label">Kategori Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Örn: Gömlekler" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a href="/Admin/Categories" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>