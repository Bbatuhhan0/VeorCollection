@model VeorCollection.Models.Product

@{
    ViewData["Title"] = "Ürünü Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Ürünü Düzenle: @Model.Name</h2>
    <hr />
    <div class="row">
        <div class="col-md-9">
            <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageUrl" />

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label class="control-label fw-bold">Ürün Adı</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label class="control-label fw-bold">Fiyat</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Yeni Resim Yükle</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mt-2 p-2 border rounded bg-light">
                            <small class="text-muted d-block mb-1">Mevcut Resim:</small>
                            <img src="@Model.ImageUrl" style="height: 100px; object-fit: contain;" />
                        </div>
                    }
                </div>

                <div class="row">
                    <div class="col-md-4 form-group mb-3">
                        <label class="control-label fw-bold">Kategori</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
                    </div>
                    <div class="col-md-4 form-group mb-3">
                        <label asp-for="GenderId" class="control-label fw-bold">Cinsiyet</label>
                        <select asp-for="GenderId" class="form-control" asp-items="ViewBag.Genders">
                            <option value="">-- Seçiniz --</option>
                        </select>
                    </div>
                    <div class="col-md-4 form-group mb-3">
                        <label asp-for="ScentTypeId" class="control-label fw-bold">Koku Tipi</label>
                        <select asp-for="ScentTypeId" class="form-control" asp-items="ViewBag.ScentTypes">
                            <option value="">-- Seçiniz --</option>
                        </select>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Stok Kodu (SKU)</label>
                    <input asp-for="SKU" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Kısa Açıklama</label>
                    <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Detaylı Ürün Açıklaması</label>
                    <textarea asp-for="FullDescription" id="summernote" class="form-control"></textarea>
                    <span asp-validation-for="FullDescription" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" asp-for="IsInStock" />
                    <label class="form-check-label">Stokta Var</label>
                </div>

                <button type="submit" class="btn btn-warning">Güncelle</button>
                <a href="/Admin/Products" class="btn btn-secondary">İptal</a>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        $('#summernote').summernote({
            placeholder: 'Ürün detaylarını buraya yazın...',
            tabsize: 2,
            height: 300,
            toolbar: [
              ['style', ['style']],
              ['font', ['bold', 'underline', 'clear']],
              ['color', ['color']],
              ['para', ['ul', 'ol', 'paragraph']],
              ['table', ['table']],
              ['insert', ['link', 'picture']],
              ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    });
</script>