@model IEnumerable<VeorCollection.Models.Blog>
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Admin Layout'u
}

<div class="container mt-4">
    <h2>Blog Yazıları</h2>
    <a href="/Admin/CreateBlog" class="btn btn-primary mb-3">Yeni Blog Ekle</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Resim</th>
                <th>Başlık</th>
                <th>Ana Etiket</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" style="width: 100px; height: auto;" />
                        }
                    </td>
                    <td>@item.Title</td>
                    <td>@item.MainTag</td>
                    <td>@item.CreatedDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="DeleteBlog" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğine emin misin?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>