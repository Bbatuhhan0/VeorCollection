@model List<VeorCollection.Models.CartItem>

@{
    ViewData["Title"] = "Sepetim";
    Layout = "AnaLayout";

    // Controller'dan gelen Toplam Tutarı al (Yoksa 0 varsay)
    decimal grandTotal = ViewBag.Total != null ? (decimal)ViewBag.Total : 0;
}

<style>
    :root {
        --veor-gold: #dabd82;
        --veor-black: #080808;
        --veor-dark: #121212;
        --veor-text: #e0e0e0;
    }

    body {
        background-color: var(--veor-black) !important;
        color: var(--veor-text) !important;
        font-family: 'Montserrat', sans-serif;
    }

    .cart-header {
        border-bottom: 1px solid #222;
        padding-bottom: 20px;
        margin-bottom: 30px;
    }

    /* Tablo Tasarımı */
    .cart-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 15px;
    }

        .cart-table thead th {
            color: #666;
            font-size: 0.85rem;
            text-transform: uppercase;
            padding: 0 15px 10px;
            border-bottom: 1px solid #222;
            text-align: left;
        }

    .cart-item-row {
        background-color: var(--veor-dark);
        transition: transform 0.3s ease;
    }

        .cart-item-row td {
            padding: 20px;
            vertical-align: middle;
            border-top: 1px solid #222;
            border-bottom: 1px solid #222;
        }

            .cart-item-row td:first-child {
                border-left: 1px solid #222;
                border-top-left-radius: 6px;
                border-bottom-left-radius: 6px;
            }

            .cart-item-row td:last-child {
                border-right: 1px solid #222;
                border-top-right-radius: 6px;
                border-bottom-right-radius: 6px;
            }

    /* Adet Butonları */
    .qty-wrapper {
        display: flex;
        align-items: center;
        background: #000;
        border: 1px solid #333;
        border-radius: 4px;
        width: fit-content;
        margin: 0 auto;
    }

    .qty-btn {
        background: transparent;
        border: none;
        color: #fff;
        width: 30px;
        height: 35px;
        cursor: pointer;
    }

        .qty-btn:hover {
            color: var(--veor-gold);
        }

    .qty-input {
        background: transparent;
        border: none;
        color: #fff;
        width: 40px;
        text-align: center;
        font-weight: bold;
    }

    /* Sağ Panel */
    .cart-summary {
        background-color: var(--veor-dark);
        padding: 30px;
        border-radius: 8px;
        border: 1px solid #222;
        position: sticky;
        top: 100px;
    }

    .btn-checkout {
        background-color: var(--veor-gold);
        color: #000;
        display: block;
        width: 100%;
        padding: 15px;
        font-weight: 800;
        text-align: center;
        text-decoration: none;
        border-radius: 4px;
        margin-top: 25px;
        transition: 0.3s;
    }

        .btn-checkout:hover {
            background-color: #fff;
            color: #000;
        }

    .btn-remove {
        background: transparent;
        border: none;
        color: #666;
        transition: 0.3s;
    }

        .btn-remove:hover {
            color: #d9534f;
        }
</style>

<div class="container mt-5 pt-5 pb-5">

    <div class="cart-header d-flex justify-content-between align-items-end">
        <h1 class="h3 text-white mb-0">ALIŞVERİŞ SEPETİ</h1>
        @if (Model != null && Model.Any())
        {
            <span class="text-muted">@Model.Count Ürün</span>
        }
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-lg-8 mb-5">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th style="padding-left: 20px;">Ürün</th>
                            <th class="text-center">Fiyat</th>
                            <th class="text-center">Adet</th>
                            <th class="text-center">Toplam</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Product != null)
                            {
                                decimal rowTotal = item.Product.Price * item.Quantity;

                                <tr class="cart-item-row">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <a href="/VeorCollection/ShopDetail/@item.Product.Id">
                                                <img src="@(string.IsNullOrEmpty(item.Product.ImageUrl) ? "/img/no-image.png" : item.Product.ImageUrl)"
                                                     alt="@item.Product.Name"
                                                     style="width: 70px; height: 90px; object-fit: cover; border-radius: 4px; border: 1px solid #333;" class="me-3">
                                            </a>
                                            <div>
                                                <div style="font-weight:600;">
                                                    <a href="/VeorCollection/ShopDetail/@item.Product.Id" class="text-white text-decoration-none">
                                                        @item.Product.Name
                                                    </a>
                                                </div>
                                                <div class="text-muted small">Kod: @item.Product.SKU</div>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="text-center text-white">@item.Product.Price.ToString("C2")</td>

                                    <td class="text-center">
                                        <div class="qty-wrapper">
                                            <form asp-action="Decrease" asp-controller="Cart" method="post">
                                                <input type="hidden" name="id" value="@item.Product.Id" />
                                                <button type="submit" class="qty-btn">-</button>
                                            </form>

                                            <input type="text" class="qty-input" value="@item.Quantity" readonly>

                                            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                                <input type="hidden" name="productId" value="@item.Product.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="qty-btn">+</button>
                                            </form>
                                        </div>
                                    </td>

                                    <td class="text-center" style="color:var(--veor-gold); font-weight:bold;">
                                        @rowTotal.ToString("C2")
                                    </td>

                                    <td class="text-center">
                                        <form asp-action="Remove" asp-controller="Cart" method="post">
                                            <input type="hidden" name="id" value="@item.Product.Id" />
                                            <button type="submit" class="btn-remove"><i class="fa fa-trash"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-lg-4">
                <div class="cart-summary">
                    <h5 class="text-white mb-4 fw-bold">Sipariş Özeti</h5>

                    <div class="d-flex justify-content-between mb-2 text-muted small">
                        <span>Ara Toplam</span>
                        <span>@grandTotal.ToString("C2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3 text-muted small">
                        <span>Kargo</span>
                        <span class="text-success">Ücretsiz</span>
                    </div>

                    <div class="d-flex justify-content-between pt-3 border-top border-secondary text-white fw-bold fs-5">
                        <span>TOPLAM</span>
                        <span style="color:var(--veor-gold);">@grandTotal.ToString("C2")</span>
                    </div>

                    <a href="#" class="btn-checkout">ÖDEMEYE GEÇ</a>

                    <div class="text-center mt-3">
                        <a href="/VeorCollection/Products" class="text-muted text-decoration-none small hover-white">Alışverişe Devam Et</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fa fa-shopping-bag fa-4x text-muted mb-3"></i>
            <h2 class="text-white">Sepetiniz Boş</h2>
            <p class="text-muted">Henüz sepetinize ürün eklemediniz.</p>
            <a href="/VeorCollection/Products" class="btn btn-outline-light mt-3 px-4">Koleksiyonu İncele</a>
        </div>
    }
</div>