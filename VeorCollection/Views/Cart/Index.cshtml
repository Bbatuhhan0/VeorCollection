@model IEnumerable<VeorCollection.Models.CartItem>

@{
    ViewData["Title"] = "Sepetim";
    Layout = "~/Views/Shared/AnaLayout.cshtml"; // Senin ana sitenin teması
}

<div class="container mt-5 pt-5">
    <h2 class="text-center mb-4">Alışveriş Sepetim</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">Sepetinizde henüz ürün yok.</div>
        <div class="text-center">
            <a href="/VeorCollection/Products" class="btn btn-primary">Alışverişe Başla</a>
        </div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Ürün</th>
                    <th>Fiyat</th>
                    <th>Adet</th>
                    <th>Toplam</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Product.ImageUrl" width="50" style="margin-right:10px;" />
                            @item.Product.Name
                        </td>
                        <td>@item.Product.Price.ToString("C2")</td>
                        <td>@item.Quantity</td>
                        <td>@((item.Product.Price * item.Quantity).ToString("C2"))</td>
                        <td>
                            <a href="/Cart/Remove/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row mt-4">
            <div class="col-md-6"></div>
            <div class="col-md-6 text-end">
                <h4>Toplam Tutar: <span class="text-success">@ViewBag.Total.ToString("C2")</span></h4>
                <a href="#" class="btn btn-success btn-lg mt-2">Ödemeye Geç</a>
            </div>
        </div>
    }
</div>