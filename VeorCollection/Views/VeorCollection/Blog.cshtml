@model IEnumerable<VeorCollection.Models.Blog>
@{
    Layout = "AnaLayout";
}

<style>
    /* ...Senin CSS kodların burada aynen kalacak... */
    body, html {
        background-color: #000000 !important;
        color: #ffffff !important;
    }

    .page-title {
        background-color: #dabd82 !important;
        background-image: none !important;
    }

        .page-title h2, .page-title .bread-crumb li, .page-title .bread-crumb li a {
            color: #000000 !important;
        }

    .news-block .inner-box {
        background-color: #0a0a0a !important;
        border: 1px solid #333 !important;
    }

        .news-block .inner-box:hover {
            border-color: #dabd82 !important;
        }

    .news-block .lower-content h5 a {
        color: #000 !important;
    }

    .theme-btn.btn-style-one {
        background-color: #ffffff !important;
        color: #000000 !important;
    }

        .theme-btn.btn-style-one:hover {
            background-color: #dabd82 !important;
        }
</style>

<section class="page-title">
    <div class="auto-container">
        <h2>Blog Yazıları</h2>
        <ul class="bread-crumb clearfix">
            <li><a href="/VeorCollection/Index">Ana Sayfa</a></li>
            <li>Blog Listesi</li>
        </ul>
    </div>
</section>

<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix">

            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12">
                    <div class="news-block">
                        <div class="inner-box">
                            <div class="image">
                                <div class="tag">@item.MainTag</div>
                                <a href="/VeorCollection/BlogDetail/@item.Id">
                                    <img src="@item.ImageUrl" alt="@item.Title" style="height: 250px; object-fit: cover;">
                                </a>
                            </div>
                            <div class="lower-content">
                                <h5><a href="/VeorCollection/BlogDetail/@item.Id">@item.Title</a></h5>
                                <div class="text">@item.CreatedDate.ToString("dd MMMM yyyy")</div>
                                <a href="/VeorCollection/BlogDetail/@item.Id" class="theme-btn btn-style-one">
                                    İncele <span class="icon flaticon-right-arrow"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>