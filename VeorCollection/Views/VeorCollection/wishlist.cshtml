@{
    Layout = "AnaLayout";
}

<!-- WISHLIST SAYFASI ÖZEL STİLLERİ (BLACK & GOLD) -->
<style>
    /* 1. Genel Sayfa Arka Planı */
    body, html, .page-wrapper, .shoping-cart-section {
        background-color: #000000 !important;
        color: #ffffff !important;
    }

    /* 2. Page Title (Başlık Alanı) - GOLD TEMA */
    .page-title {
        background-color: #dabd82 !important; /* Gold */
        background-image: none !important;
    }

        .page-title h2 {
            color: #000000 !important;
        }

        .page-title .bread-crumb li, .page-title .bread-crumb li a {
            color: #000000 !important;
        }

            .page-title .bread-crumb li a:hover {
                color: #ffffff !important;
            }

    /* 3. Tablo Genel Yapısı */
    .cart-outer {
        background-color: transparent !important;
    }

    .cart-table {
        background-color: #0a0a0a !important; /* Tablo zemin rengi */
        border: 1px solid #333 !important;
    }

    /* Tablo Başlığı (Thead) */
    .cart-header {
        background-color: #1a1a1a !important;
        border-bottom: 2px solid #dabd82 !important; /* Gold çizgi */
    }

        .cart-header th {
            color: #dabd82 !important; /* Başlıklar Gold */
            font-weight: 700;
        }

    /* Tablo Satırları (Tbody) */
    .cart-table tbody tr {
        border-bottom: 1px solid #333 !important;
    }

    /* 4. Ürün Alanı (Resim ve İsim) */
    .prod-column .column-box .prod-title {
        color: #ffffff !important;
    }

    .prod-column .column-box .prod-text {
        color: #cccccc !important; /* Açıklama gri */
    }

    .prod-column .column-box .prod-thumb img {
        border: 1px solid #333; /* Resim çerçevesi */
        background-color: #000;
    }

    /* Kaldır (X) İkonu */
    .cross-icon {
        background-color: #333 !important;
        color: #fff !important;
    }

        .cross-icon:hover {
            background-color: #dabd82 !important;
            color: #000 !important;
        }

    /* 5. Fiyat */
    .price {
        color: #dabd82 !important; /* Fiyat Gold */
        font-weight: bold;
        font-size: 18px;
    }

    /* 6. Miktar Kutusu (Quantity) */
    .item-quantity input.qty-spinner {
        background-color: #000 !important;
        border: 1px solid #333 !important;
        color: #ffffff !important;
        text-align: center;
    }

        .item-quantity input.qty-spinner:focus {
            border-color: #dabd82 !important;
        }

    /* 7. Butonlar (Add to Cart) */
    .theme-btn.btn-style-one {
        background-color: #ffffff !important; /* Beyaz Buton */
        color: #000000 !important;
        border: 1px solid #fff;
    }

        .theme-btn.btn-style-one:hover {
            background-color: #dabd82 !important; /* Hover Gold */
            border-color: #dabd82 !important;
            color: #000000 !important;
        }

    /* Sidebar/Offcanvas (Sepet Menüsü) Arka Planı */
    .offcanvas, .sidebar-widget-container {
        background-color: #000000 !important;
        color: #fff !important;
    }

        .sidebar-widget-container h6 {
            color: #dabd82 !important;
        }

        .sidebar-widget-container a {
            color: #ccc !important;
        }

            .sidebar-widget-container a:hover {
                color: #dabd82 !important;
            }
</style>

