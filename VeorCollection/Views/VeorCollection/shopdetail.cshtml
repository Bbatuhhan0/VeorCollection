@model VeorCollection.Models.Product

@{
    Layout = "AnaLayout";
    ViewData["Title"] = Model.Name; // Sayfa başlığı ürün adı
}

<style>
    /* STİLLER (Aynen korundu) */
    body, html, .page-wrapper, .shop-detail-section, .products-section-six {
        background-color: #000000 !important;
        color: #ffffff !important;
    }

    .page-title {
        background-color: #dabd82 !important;
        background-image: none !important;
    }

        .page-title h2 {
            color: #000000 !important;
        }

        .page-title .bread-crumb li, .page-title .bread-crumb li a {
            color: #000000 !important;
        }

    /* Ürün Detay */
    .shop-detail-section .inner-column h3 {
        color: #ffffff !important;
    }

    .shop-detail-section .inner-column .text {
        color: #cccccc !important;
    }

    .shop-detail-section .inner-column .price {
        color: #dabd82 !important;
        font-size: 24px;
        font-weight: 700;
    }

    .theme-btn.btn-style-one {
        background-color: #fff !important;
        color: #000 !important;
        border: 1px solid #fff;
    }

        .theme-btn.btn-style-one:hover {
            background-color: #dabd82 !important;
            border-color: #dabd82 !important;
            color: #000 !important;
        }

    .categories span {
        color: #dabd82 !important;
        font-weight: bold;
    }

    .categories {
        color: #999 !important;
        margin-bottom: 10px;
    }
</style>



<section class="shop-detail-section">
    <div class="auto-container">
        <div class="upper-box">
            <div class="row clearfix">
                <div class="gallery-column col-lg-6 col-md-12 col-sm-12">
                    <div class="inner-column">
                        <div class="carousel-outer">
                            <div class="swiper-container content-carousel">
                                <div class="swiper-wrapper">
                                    <div class="swiper-slide">
                                        <figure class="image">
                                            <a href="@Url.Content(Model.ImageUrl)" class="lightbox-image">
                                                <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" style="width:100%; height:auto;">
                                            </a>
                                        </figure>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="content-column col-lg-6 col-md-12 col-sm-12">
                    <div class="inner-column">
                        <h3>@Model.Name</h3>

                        <div class="rating">
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                        </div>

                        <div class="price">@Model.Price.ToString("C")</div>

                        <div class="text">
                            <p>Bu ürün özel koleksiyonumuzun nadide parçalarından biridir. Kaliteli malzeme ve şık tasarımıyla öne çıkmaktadır.</p>
                        </div>

                        <div class="categories">
                            <span>Kategori :</span> @(Model.Category != null ? Model.Category.Name : "Genel")
                        </div>
                        <div class="categories">
                            <span>Durum :</span>
                            @if (Model.IsInStock)
                            {
                                <span style="color:#00a651 !important;">Stokta Var</span>
                            }
                            else
                            {

                                <span style="color:red !important;">Tükendi</span>
                            }
                        </div>

                        <div class="d-flex align-items-center flex-wrap mt-4">
                            <div class="quantity-box me-3">
                                <div class="item-quantity">
                                    <input class="qty-spinner" type="number" value="1" name="quantity" style="width: 80px; padding: 10px; background-color:#000; border:1px solid #333; color:#fff;">
                                </div>
                            </div>

                            <div class="button-box">
                                <a href="/Cart/AddToCart?productId=@Model.Id" class="theme-btn btn-style-one">
                                    Sepete Ekle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="lower-box">
            <div class="product-info-tabs">
                <div class="prod-tabs tabs-box">
                    <ul class="tab-btns tab-buttons clearfix">
                        <li data-tab="#prod-details" class="tab-btn active-btn">Ürün Detayları</li>
                    </ul>
                    <div class="tabs-content">
                        <div class="tab active-tab" id="prod-details">
                            <div class="content">
                                <h3>@Model.Name Özellikleri</h3>
                                <p>Detaylı ürün açıklaması buraya gelecek.</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Sayfa yapısı yüklendiği an 1 saniye say ve preloader'ı yok et
        setTimeout(function() {
            var preloader = document.querySelector('.preloader');
            // Eğer temada class ismi '.loader' ise burayı değiştirmen gerekebilir ama genelde .preloader'dır.
            if (preloader) {
                preloader.style.opacity = '0';
                preloader.style.display = 'none';
            }

            // Ayrıca body'deki 'overflow: hidden' kilidini de kaldıralım
            document.body.style.overflow = 'visible';
        }, 1000); // 1000ms = 1 saniye
    });
</script>
    </div>
</section>