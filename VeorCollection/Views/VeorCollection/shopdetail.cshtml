        margin-top: 50px;
    }

    .tab-btns .tab-btn {
        background-color: #0a0a0a !important;
        color: #fff !important;
        border: 1px solid #333;
        border-bottom: none;
    }

        .tab-btns .tab-btn.active-btn {
            background-color: #dabd82 !important;
            color: #000 !important;
            border-color: #dabd82;
        }

    .tabs-content {
