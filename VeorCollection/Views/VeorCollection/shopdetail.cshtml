@model VeorCollection.Models.Product

@{
    Layout = "AnaLayout";
    ViewData["Title"] = Model.Name;

    // Resim yoksa placeholder, varsa kendi resmini al
    var imageUrl = string.IsNullOrEmpty(Model.ImageUrl) ? "/img/no-image.png" : Model.ImageUrl;
}

<style>
    /* Bu sayfaya özel stiller */
    body, html, .page-wrapper, .shop-detail-section {
        background-color: #000 !important;
        color: #fff !important;
    }

    .price-tag {
        color: #dabd82 !important;
        font-size: 26px;
        font-weight: 700;
    }

    .stock-in {
        color: #00a651 !important;
        font-weight: bold;
    }

    .stock-out {
        color: #ff4d4d !important;
        font-weight: bold;
    }

    .meta-data span {
        color: #dabd82;
        font-weight: 600;
        margin-right: 8px;
    }

    .meta-data div {
        margin-bottom: 6px;
        color: #ccc;
        font-size: 15px;
    }

    .inner-column h3 {
        color: #fff !important;
        font-size: 32px;
        margin-bottom: 15px;
    }

    .text p {
        color: #ccc;
    }
</style>

<section class="shop-detail-section">
    <div class="auto-container">
        <div class="row clearfix">

            <div class="col-lg-6 col-md-12 col-sm-12">
                <div class="inner-column">
                    <figure class="image">
                        <a href="@Url.Content(imageUrl)" class="lightbox-image">
                            <img src="@Url.Content(imageUrl)" alt="@Model.Name" class="img-fluid" style="width:100%; border-radius:4px; box-shadow: 0 0 15px rgba(218,189,130,0.1);">
                        </a>
                    </figure>
                </div>
            </div>

            <div class="col-lg-6 col-md-12 col-sm-12">
                <div class="inner-column">
                    <h3>@Model.Name</h3>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="price-tag">@Model.Price.ToString("C")</div>
                        <div class="@(Model.IsInStock ? "stock-in" : "stock-out")">
                            @(Model.IsInStock ? "Stokta Var" : "Tükendi")
                        </div>
                    </div>

                    <div class="text mb-4">
                        <p>@Model.ShortDescription</p>
                    </div>

                    <div class="meta-data border-top border-bottom py-3 mb-4" style="border-color: #333 !important;">
                        <div><span>Kategori:</span> @(Model.Category?.Name ?? "Genel")</div>

                        @if (Model.Gender != null)
                        {
                            <div><span>Cinsiyet:</span> @Model.Gender.Name</div>
                        }

                        @if (Model.ScentType != null)
                        {
                            <div><span>Koku Tipi:</span> @Model.ScentType.Name</div>
                        }

                        @if (!string.IsNullOrEmpty(Model.SKU))
                        {
                            <div><span>SKU:</span> @Model.SKU</div>
                        }
                    </div>

                    @if (Model.IsInStock)
                    {
                        <form action="/Cart/AddToCart" method="get" class="d-flex align-items-center mt-4">
                            <input type="hidden" name="productId" value="@Model.Id" />

                            <div class="quantity-box me-3">
                                <input type="number" name="quantity" value="1" min="1" max="10"
                                       class="form-control"
                                       style="width: 80px; height: 50px; background-color:#111; border:1px solid #dabd82; color:#fff; text-align:center;">
                            </div>

                            <button type="submit" class="theme-btn btn-style-one" style="cursor:pointer; height: 50px; padding: 0 30px;">
                                Sepete Ekle
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-dark mt-3" style="border: 1px solid #dabd82; color: #dabd82;">
                            <i class="fa fa-info-circle"></i> Bu ürün şu anda temin edilemiyor.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="lower-box mt-5">
            <div class="product-info-tabs">
                <div class="tabs-content">
                    <div class="tab active-tab">
                        <div class="content">
                            <h3 class="text-white border-bottom pb-2 mb-3" style="border-color:#333 !important;">Ürün Detayları</h3>
                            <div class="text-white" style="line-height: 1.8;">
                                @Html.Raw(Model.FullDescription)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var preloader = document.querySelector('.preloader');
        if (preloader) {
            setTimeout(() => {
                preloader.style.opacity = '0';
                preloader.style.display = 'none';
            }, 500);
        }
    });
</script>