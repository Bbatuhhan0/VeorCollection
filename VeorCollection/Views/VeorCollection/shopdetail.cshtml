@model VeorCollection.Models.Product

@{
    ViewData["Title"] = Model.Name;
    Layout = "AnaLayout";
    var relatedProducts = ViewBag.RelatedProducts as List<VeorCollection.Models.Product>;

    // Varyantlar (Seçim Kutusu Olarak Çıkacaklar)
    var variantNames = new[] { "Beden", "Renk", "Size", "Color", "Numara", "Ebat" };

    var allAttributes = Model.AttributeValues?.GroupBy(x => x.ProductAttribute.Name).ToList();
    var selectionAttributes = allAttributes?.Where(x => variantNames.Contains(x.Key, StringComparer.OrdinalIgnoreCase)).ToList();
    var infoAttributes = allAttributes?.Where(x => !variantNames.Contains(x.Key, StringComparer.OrdinalIgnoreCase)).ToList();
}

<style>
    :root {
        --veor-gold: #dabd82;
        --veor-black: #080808;
        --veor-dark: #121212;
        --veor-text: #e0e0e0;
    }

    body {
        background-color: var(--veor-black) !important;
        color: var(--veor-text) !important;
        font-family: 'Montserrat', sans-serif;
    }

    .breadcrumb-veor a {
        color: #888;
        text-decoration: none;
        font-size: 0.9rem;
        transition: 0.3s;
    }

        .breadcrumb-veor a:hover {
            color: var(--veor-gold);
        }

    .breadcrumb-veor .active {
        color: var(--veor-gold);
        font-weight: 600;
    }

    /* --- Resim Alanı --- */
    .product-image-container {
        border: 1px solid #222;
        border-radius: 8px;
        overflow: hidden;
        background: var(--veor-dark);
        position: relative;
        max-height: 660px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .product-image-container img {
            max-width: 100%;
            max-height: 660px;
            width: auto;
            object-fit: contain;
        }

    .product-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.5rem;
    }

    .product-price {
        font-size: 1.8rem;
        color: var(--veor-gold);
        font-weight: 300;
        margin-bottom: 1.5rem;
    }

    /* --- GÜNCELLENEN KISA AÇIKLAMA STİLİ --- */
    .product-short-desc {
        color: #fff !important; /* Rengi Beyaz Yapıldı */
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

        /* Editörden gelen iç elementlerin de beyaz olmasını zorla */
        .product-short-desc *, .description-content * {
            color: #fff !important;
        }

    .attr-group-label {
        font-weight: 600;
        color: #fff;
        margin-bottom: 8px;
        display: block;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 1px;
    }

    .attr-radio {
        display: none;
    }

    .attr-box-label {
        display: inline-block;
        min-width: 40px;
        height: 40px;
        line-height: 38px;
        text-align: center;
        border: 1px solid #444;
        background-color: var(--veor-dark);
        color: #ccc;
        margin-right: 8px;
        margin-bottom: 8px;
        cursor: pointer;
        font-size: 0.85rem;
        border-radius: 4px;
        transition: all 0.2s ease;
        padding: 0 10px;
    }

    .attr-radio:checked + .attr-box-label {
        border-color: var(--veor-gold);
        background-color: var(--veor-gold);
        color: #000;
        font-weight: bold;
        box-shadow: 0 0 10px rgba(218, 189, 130, 0.4);
    }

    .btn-add-cart {
        background-color: var(--veor-gold);
        color: #000;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 12px 30px;
        border: none;
        width: 100%;
        border-radius: 4px;
        transition: 0.3s;
    }

        .btn-add-cart:hover {
            background-color: #fff;
        }

        .btn-add-cart:disabled {
            background-color: #333;
            color: #666;
            cursor: not-allowed;
        }

    .specs-table td {
        padding: 8px;
        border-bottom: 1px solid #333;
        color: #ccc;
        font-size: 0.9rem;
    }

        .specs-table td:first-child {
            font-weight: bold;
            color: var(--veor-gold);
            width: 140px;
        }

    .nav-tabs {
        border-bottom: 1px solid #333;
    }

        .nav-tabs .nav-link {
            color: #888;
            border: none;
            font-size: 0.95rem;
            font-weight: 600;
            padding: 12px 20px;
            background: transparent;
        }

            .nav-tabs .nav-link.active {
                color: var(--veor-gold);
                border-bottom: 2px solid var(--veor-gold);
            }

    .tab-content {
        background-color: var(--veor-dark);
        padding: 25px;
        border: 1px solid #222;
        border-top: none;
    }
</style>

<div class="container py-5 mt-5">

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb breadcrumb-veor">
            <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
            <li class="breadcrumb-item"><a href="/VeorCollection/Products">Koleksiyon</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row gx-5">
        <div class="col-lg-5 mb-5">
            <div class="product-image-container">
                <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/img/no-image.png" : Model.ImageUrl)" alt="@Model.Name">
            </div>
        </div>

        <div class="col-lg-7">
            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />

                <h1 class="product-title">@Model.Name</h1>

                <div class="d-flex align-items-center mb-3">
                    <span class="product-price">@Model.Price.ToString("C2")</span>
                    <span class="ms-3 badge @(Model.IsInStock ? "bg-success" : "bg-danger") bg-opacity-25 text-white border border-secondary" style="font-weight:500;">
                        @(Model.IsInStock ? "Stokta Var" : "Tükendi")
                    </span>
                </div>

                <div class="product-short-desc">
                    @Html.Raw(Model.ShortDescription ?? "Bu ürün için kısa açıklama bulunmuyor.")
                </div>

                <hr style="border-color:#333; margin: 25px 0;">

                @if (selectionAttributes != null && selectionAttributes.Any())
                {
                    foreach (var group in selectionAttributes)
                    {
                        <div class="mb-3">
                            <span class="attr-group-label">@group.Key:</span>
                            <div class="d-flex flex-wrap">
                                @foreach (var item in group)
                                {
                                    <div>
                                        <input type="radio" class="attr-radio" name="selectedAttr_@group.Key" id="attr_@item.Id" value="@item.Id" required>
                                        <label for="attr_@item.Id" class="attr-box-label">@item.Value</label>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }

                <div class="row align-items-end mt-4">
                    <div class="col-3 col-md-2">
                        <label class="attr-group-label">Adet</label>
                        <input type="number" name="quantity" class="form-control bg-dark text-white border-secondary text-center p-2" value="1" min="1" max="10">
                    </div>
                    <div class="col-9 col-md-6">
                        <button type="submit" class="btn-add-cart" @(!Model.IsInStock ? "disabled" : "")>
                            @(Model.IsInStock ? "SEPETE EKLE" : "STOKTA YOK")
                        </button>
                    </div>
                </div>

                <div class="mt-4 small text-muted">
                    <i class="fa fa-lock text-warning me-2"></i> Güvenli Ödeme &nbsp;|&nbsp;
                    <i class="fa fa-truck text-warning me-2"></i> Hızlı Kargo
                </div>
            </form>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <ul class="nav nav-tabs" id="productTabs" role="tablist">
                <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#desc">Açıklama</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#specs">Özellikler</button></li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane fade show active" id="desc">
                    <div class="text-white description-content" style="font-size: 0.95rem;">
                        @Html.Raw(Model.FullDescription ?? "Detaylı açıklama eklenmemiş.")
                    </div>
                </div>

                <div class="tab-pane fade" id="specs">
                    <table class="table table-borderless specs-table" style="max-width: 600px;">
                        <tbody>
                            @if (Model.Category != null)
                            {
                                <tr><td>Kategori</td><td>@Model.Category.Name</td></tr>
                            }
                            <tr><td>Stok Kodu</td><td>@(Model.SKU ?? "-")</td></tr>

                            @if (infoAttributes != null && infoAttributes.Any())
                            {
                                foreach (var group in infoAttributes)
                                {
                                    <tr>
                                        <td>@group.Key</td>
                                        <td>@string.Join(", ", group.Select(v => v.Value))</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @if (relatedProducts != null && relatedProducts.Any())
    {
        <div class="mt-5 pt-4 border-top border-dark">
            <h4 class="text-white mb-4" style="font-size: 1.2rem;">Benzer Ürünler</h4>
            <div class="row">
                @foreach (var item in relatedProducts)
                {
                    <div class="col-6 col-md-3 mb-4">
                        <div class="bg-dark p-3 rounded h-100 text-center border border-secondary" style="transition:0.3s; font-size:0.9rem;">
                            <a href="/VeorCollection/ShopDetail/@item.Id">
                                <img src="@item.ImageUrl" class="img-fluid rounded mb-2" alt="@item.Name" style="max-height:200px; object-fit:cover;">
                            </a>
                            <h6 class="text-white mb-1"><a href="/VeorCollection/ShopDetail/@item.Id" class="text-reset text-decoration-none">@item.Name</a></h6>
                            <div class="text-warning fw-bold">@item.Price.ToString("C2")</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>