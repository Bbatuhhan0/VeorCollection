    .select-box label {
        cursor: pointer;
        border: 1px solid #333;
        padding: 5px 15px;
        background-color: #0a0a0a;
        color: #fff;
        transition: all 0.3s ease;
        display: inline-block;
        margin-right: 5px;
    }

    .select-box input[type="radio"]:checked + label {
        background-color: #dabd82;
        color: #000;
