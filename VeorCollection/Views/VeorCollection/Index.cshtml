    /* YENİ EKLENEN ÜRÜN KARTI STİLİ (Dinamik kısım için) */
    .product-card-custom {
        background-color: #121212;
        border: 1px solid #222;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        position: relative;
        margin-bottom: 30px;
    }

        .product-card-custom:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(218, 189, 130, 0.1);
            border-color: #dabd82;
        }

    .card-img-wrap {
        position: relative;
        overflow: hidden;
        height: 350px; /* Resim yüksekliği sabit */
        background-color: #000;
    }

        .card-img-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .product-card-custom:hover .card-img-wrap img {
        transform: scale(1.05);
    }

    .hover-btn-container {
        position: absolute;
        bottom: -60px;
        left: 0;
        width: 100%;
        padding: 10px;
        background: rgba(0,0,0,0.8);
        transition: bottom 0.3s ease;
        display: flex;
        justify-content: center;
    }

    .product-card-custom:hover .hover-btn-container {
        bottom: 0;
    }

    .btn-quick-view {
        background-color: #dabd82;
        color: #000;
        font-weight: 700;
        padding: 10px 0;
        border-radius: 4px;
        text-decoration: none;
        text-transform: uppercase;
        font-size: 0.9rem;
        width: 90%;
        text-align: center;
        display: block;
    }

        .btn-quick-view:hover {
            background-color: #fff;
            color: #000;
        }

    .product-details {
        padding: 20px 15px;
        text-align: center;
    }

    .product-name a {
        color: #fff;
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: 600;
        transition: 0.3s;
    }

        .product-name a:hover {
            color: #dabd82;
        }

    .product-price-new {
        color: #dabd82;
        font-weight: 700;
        font-size: 1.2rem;
        margin-top: 10px;
    }
