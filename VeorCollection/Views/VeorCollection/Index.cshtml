<section class="products-section-three">
    <div class="auto-container">
        <div class="sec-title">
            <h2><span>Yeni Eklenen Ürünler </span> </h2>
        </div>

        <div class="row clearfix">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="product-card-custom">
                            <div class="card-img-wrap">
                                <a href="/VeorCollection/ShopDetail/@item.Id">
                                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/img/no-image.png" : item.ImageUrl)" alt="@item.Name">
                                </a>
                                <div class="hover-btn-container">
                                    <a href="/VeorCollection/ShopDetail/@item.Id" class="btn-quick-view">İNCELE</a>
                                </div>
                            </div>
                            <div class="product-details">
                                <h6 class="product-name">
                                    <a href="/VeorCollection/ShopDetail/@item.Id">@item.Name</a>
                                </h6>
                                <div class="product-price-new">@item.Price.ToString("C2")</div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <h4 class="text-white-50">Henüz ürün eklenmemiş. Lütfen Admin panelinden ürün ekleyin.</h4>
                </div>
            }
        </div>

        <div class="button-box text-center mt-4">
            <a href="/VeorCollection/Products" class="theme-btn btn-style-one">
                Shop Now <span class="icon flaticon-right-arrow"></span>
            </a>
        </div>
    </div>
</section>
