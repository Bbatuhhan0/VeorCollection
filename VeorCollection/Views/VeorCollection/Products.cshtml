@model IEnumerable<VeorCollection.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
    Layout = "AnaLayout";
}

<style>
    body {
        background-color: #000000 !important;
        color: #ffffff !important;
    }

    .sidebar-widget {
        background-color: #111111;
        padding: 20px;
        border: 1px solid #222;
        margin-bottom: 20px;
    }

    .sidebar-title h5 {
        color: #fff;
        font-weight: 700;
        border-bottom: 1px solid #333;
        padding-bottom: 10px;
        margin-bottom: 15px;
    }

    .cat-list li {
        list-style: none;
        margin-bottom: 8px;
    }

    .shop-item .inner-box {
        background-color: #080808;
        border: 1px solid #1a1a1a;
        margin-bottom: 30px;
    }

    .shop-item h6 a {
        color: #fff;
        text-decoration: none;
    }

    .shop-item .price {
        color: #dabd82;
        font-weight: 700;
        margin-top: 10px;
    }

    .cart-btn-custom {
        border: 1px solid #dabd82;
        color: #dabd82;
        padding: 5px 15px;
        text-decoration: none;
        display: inline-block;
        margin-top: 10px;
    }

        .cart-btn-custom:hover {
            background-color: #dabd82;
            color: #000;
        }

    /* Checkbox Stilleri */
    .form-check-input {
        background-color: #222;
        border-color: #444;
    }

        .form-check-input:checked {
            background-color: #dabd82;
            border-color: #dabd82;
        }

    .form-check-label {
        color: #ccc;
        cursor: pointer;
        user-select: none;
    }

        .form-check-label:hover {
            color: #fff;
        }
</style>

<section class="page-title" style="background-image: url(/html/assets/images/background/image-2.jpg); padding: 60px 0; text-align: center;">
    <div class="auto-container">
        <h1 style="color:#fff; font-weight:800;">KOLEKSİYON</h1>
    </div>
</section>

<div class="sidebar-page-container mt-5">
    <div class="auto-container">
        <div class="row clearfix">

            <div class="sidebar-side col-lg-3 col-md-12 col-sm-12">
                <aside class="sidebar sticky-top" style="top: 100px; z-index: 1;">

                    <form action="/VeorCollection/Products" method="get" id="filterForm">

                        <div class="sidebar-widget category-widget">
                            <div class="sidebar-title"><h5>Kategoriler</h5></div>
                            <ul class="cat-list p-0">
                                <li>
                                    <a href="/VeorCollection/Products" class="@(ViewBag.SeciliCategoryId == null ? "text-warning fw-bold" : "text-muted")" style="text-decoration:none;">Tüm Ürünler</a>
                                </li>
                                @if (ViewBag.Categories != null)
                                {
                                    foreach (var cat in ViewBag.Categories as List<VeorCollection.Models.Category>)
                                    {
                                        var isActive = (ViewBag.SeciliCategoryId == cat.Id);
                                        <li>
                                            <a href="/VeorCollection/Products?categoryId=@cat.Id"
                                               class="@(isActive ? "text-warning fw-bold" : "text-muted")"
                                               style="text-decoration:none;">
                                                @cat.Name
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                            @if (ViewBag.SeciliCategoryId != null)
                            {
                                <input type="hidden" name="categoryId" value="@ViewBag.SeciliCategoryId" />
                            }
                        </div>

                        @if (ViewBag.Attributes != null)
                        {
                            var allAttributes = ViewBag.Attributes as List<VeorCollection.Models.ProductAttribute>;
                            var selectedFilters = ViewBag.SelectedFilters as List<int> ?? new List<int>();

                            foreach (var attr in allAttributes)
                            {
                                <div class="sidebar-widget category-widget">
                                    <div class="sidebar-title"><h5>@attr.Name</h5></div>
                                    <ul class="cat-list p-0">
                                        @foreach (var val in attr.Values)
                                        {
                                            <li class="d-flex align-items-center mb-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="f"
                                                           value="@val.Id" id="f_@val.Id"
                                                           @(selectedFilters.Contains(val.Id) ? "checked" : "")
                                                           onchange="document.getElementById('filterForm').submit()">
                                                    <label class="form-check-label ms-2" for="f_@val.Id">
                                                        @val.Value
                                                    </label>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        }

                        <a href="/VeorCollection/Products" class="btn btn-outline-secondary w-100 btn-sm">Filtreleri Temizle</a>
                    </form>

                </aside>
            </div>

            <div class="content-side col-lg-9 col-md-12 col-sm-12">
                <div class="row clearfix">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <div class="shop-item col-lg-4 col-md-6 col-sm-12">
                                <div class="inner-box p-3 text-center">
                                    <div class="image mb-3">
                                        <a asp-controller="VeorCollection" asp-action="ShopDetail" asp-route-id="@item.Id">
                                            <img src="@item.ImageUrl" alt="@item.Name" style="height: 250px; object-fit: cover; width: 100%; border-radius: 4px;">
                                        </a>
                                    </div>
                                    <h6>
                                        <a asp-controller="VeorCollection" asp-action="ShopDetail" asp-route-id="@item.Id">@item.Name</a>
                                    </h6>
                                    <div class="price">@item.Price.ToString("C2")</div>
                                    <a asp-controller="VeorCollection" asp-action="ShopDetail" asp-route-id="@item.Id" class="cart-btn-custom">İncele</a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center py-5">
                            <h3 class="text-white">Ürün bulunamadı.</h3>
                            <p class="text-muted">Seçtiğiniz kriterlere uygun ürün yok.</p>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>