@model IEnumerable<VeorCollection.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
    Layout = "AnaLayout"; /* Ana temanızı kullanıyoruz */
}

<section class="page-title" style="background-image: url(/html/assets/images/background/image-2.jpg);">
    <div class="auto-container">
        <h1>Tüm Ürünler</h1>
        <ul class="page-breadcrumb">
            <li><a href="/">Anasayfa</a></li>
            <li>Ürünler</li>
        </ul>
    </div>
</section>

<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix">

            <div class="sidebar-side col-lg-3 col-md-12 col-sm-12">
                <aside class="sidebar sticky-top" style="top: 100px; z-index: 1;">

                    <div class="sidebar-widget category-widget">
                        <div class="widget-content">
                            <div class="sidebar-title">
                                <h5>Cinsiyet</h5>
                            </div>
                            <ul class="cat-list">
                                <li><a href="/VeorCollection/Products">Tümü</a></li>
                                <li><a href="/VeorCollection/Products?cinsiyet=Erkek" class="@(ViewBag.SeciliCinsiyet == "Erkek" ? "active-filter" : "")">Erkek Parfümleri</a></li>
                                <li><a href="/VeorCollection/Products?cinsiyet=Kadın" class="@(ViewBag.SeciliCinsiyet == "Kadın" ? "active-filter" : "")">Kadın Parfümleri</a></li>
                                <li><a href="/VeorCollection/Products?cinsiyet=Unisex" class="@(ViewBag.SeciliCinsiyet == "Unisex" ? "active-filter" : "")">Unisex</a></li>
                            </ul>

                            <br>

                            <div class="sidebar-title">
                                <h5>Koku Tipi</h5>
                            </div>
                            <ul class="cat-list">
                                <li><a href="/VeorCollection/Products?kokuTipi=Çiçeksi" class="@(ViewBag.SeciliKoku == "Çiçeksi" ? "active-filter" : "")">Çiçeksi Kokular</a></li>
                                <li><a href="/VeorCollection/Products?kokuTipi=Odunsu" class="@(ViewBag.SeciliKoku == "Odunsu" ? "active-filter" : "")">Odunsu Kokular</a></li>
                                <li><a href="/VeorCollection/Products?kokuTipi=Meyveli" class="@(ViewBag.SeciliKoku == "Meyveli" ? "active-filter" : "")">Meyveli Kokular</a></li>
                                <li><a href="/VeorCollection/Products?kokuTipi=Baharatlı" class="@(ViewBag.SeciliKoku == "Baharatlı" ? "active-filter" : "")">Baharatlı Kokular</a></li>
                                <li><a href="/VeorCollection/Products?kokuTipi=Ferah" class="@(ViewBag.SeciliKoku == "Ferah" ? "active-filter" : "")">Ferah/Okyanus</a></li>
                                <li><a href="/VeorCollection/Products?kokuTipi=Şekerli" class="@(ViewBag.SeciliKoku == "Şekerli" ? "active-filter" : "")">Şekerli/Gourmand</a></li>
                            </ul>
                        </div>
                    </div>

                </aside>
            </div>

            <div class="content-side col-lg-9 col-md-12 col-sm-12">
                <div class="row clearfix">

                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <div class="shop-item col-lg-4 col-md-6 col-sm-12">
                                <div class="inner-box">
                                    <div class="image">
                                        <a href="/VeorCollection/ProductDetails/@item.Id">
                                            <img src="@item.ImageUrl" alt="@item.Name" style="height: 300px; object-fit: cover;">
                                        </a>

                                        <div class="cart-box text-center">
                                            <a class="cart" href="#">Sepete Ekle</a>
                                        </div>
                                    </div>
                                    <div class="lower-content">
                                        <div class="rating">
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                        </div>

                                        <h6><a href="/VeorCollection/ProductDetails/@item.Id">@item.Name</a></h6>

                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="price">@item.Price.ToString("C2")</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center" style="padding: 100px 0;">
                            <h3>Aradığınız kriterlere uygun ürün bulunamadı.</h3>
                            <a href="/VeorCollection/Products" class="theme-btn btn-style-one mt-3">Tüm Ürünleri Gör</a>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>

<style>
    /* Filtre ve Sidebar Stilleri */
    .sidebar-widget {
        background-color: #111; /* Koyu arka plan */
        padding: 30px 20px;
        border: 1px solid #222;
        margin-bottom: 30px;
    }

    .sidebar-title h5 {
        color: #fff;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 20px;
        border-bottom: 1px solid #333;
        padding-bottom: 10px;
    }

    .cat-list li {
        margin-bottom: 12px;
        list-style: none;
    }

        .cat-list li a {
            color: #bbbbbb; /* Normal linkler gri */
            transition: 0.3s;
            font-size: 15px;
            display: block;
        }

            .cat-list li a:hover {
                color: #dabd82; /* Üzerine gelince altın sarısı */
                padding-left: 5px; /* Hafif sağa kayma efekti */
            }

    /* Aktif filtre rengi (Altın Sarısı) */
    .active-filter {
        color: #dabd82 !important;
        font-weight: bold;
    }

    /* Ürün Kartı Düzenlemeleri */
    .shop-item .inner-box {
        background-color: transparent;
        margin-bottom: 40px;
    }

    .shop-item .price {
        color: #dabd82; /* Fiyat rengi altın */
        font-weight: 700;
        font-size: 18px;
    }

    .shop-item h6 a {
        color: #fff;
    }

        .shop-item h6 a:hover {
            color: #dabd82;
        }
</style>