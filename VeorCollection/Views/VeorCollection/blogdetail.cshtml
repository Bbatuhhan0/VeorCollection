        background-color: #0a0a0a !important;
        border: 1px solid #333 !important;
    }

        .more-posts .new-post a {
            color: #fff !important;
        }

            .more-posts .new-post a:hover {
                color: #dabd82 !important;
            }

    /* Yorumlar (Comments) */
    .comments-area .group-title h5 {
        color: #fff !important;
    }

    .comment-box {
        background-color: #0a0a0a !important;
        border: 1px solid #333 !important;
        padding: 20px;
        margin-bottom: 20px;
    }

        .comment-box .author-thumb img {
            border: 2px solid #333 !important;
        }

    .comment-info strong {
        color: #dabd82 !important;
    }

    .comment-time {
        color: #666 !important;
    }

    .comment-box .text {
        color: #ccc !important;
    }

    .reply-btn {
        background-color: #1a1a1a !important;
        color: #fff !important;
    }

        .reply-btn:hover {
            background-color: #dabd82 !important;
            color: #000 !important;
        }

    /* Yorum Formu */
    .comment-form .group-title h4 {
        color: #fff !important;
    }

    .comment-form input,
    .comment-form textarea {
        background-color: #0a0a0a !important;
        border: 1px solid #333 !important;
        color: #fff !important;
    }

        .comment-form input:focus,
        .comment-form textarea:focus {
            border-color: #dabd82 !important;
        }

    .comment-form .check-box label {
        color: #999 !important;
    }

    /* Buton */
    .theme-btn.btn-style-one {
        background-color: #fff !important;
        color: #000 !important;
        border: 1px solid #fff;
    }

        .theme-btn.btn-style-one:hover {
            background-color: #dabd82 !important;
            border-color: #dabd82 !important;
            color: #000 !important;
        }

    /* 4. Sidebar (Sağ Menü) Stilleri */
    aside.sidebar .sidebar-widget-two {
        background-color: #0a0a0a !important;
        border: 1px solid #333 !important;
    }

    .sidebar-title-two h5 {
        color: #dabd82 !important;
        border-bottom: 1px solid #333;
    }

    /* Arama Widget */
