        background-color: #000 !important;
        border: 1px solid #333 !important;
        color: #fff !important;
    }

    .sidebar-widget-two.search-box button {
        color: #dabd82 !important;
    }

    /* Sosyal Medya Widget */
    .social-list li {
        color: #ccc !important;
        border-bottom: 1px solid #333 !important;
    }

        .social-list li a {
            color: #dabd82 !important;
        }

    /* Hot Topics (Post Widget) */
    .post-widget .post h6 a {
        color: #fff !important;
    }

        .post-widget .post h6 a:hover {
            color: #dabd82 !important;
        }

    .post-widget .post .category {
        color: #dabd82 !important;
    }

    .post-widget .post .post-number {
        background-color: #dabd82 !important;
        color: #000 !important;
    }

    /* Hot Categories */
    .category-list-two li a {
        color: #ccc !important;
        background-color: #1a1a1a !important;
        border-bottom: 1px solid #333 !important;
    }

        .category-list-two li a:hover {
            background-color: #dabd82 !important;
            color: #000 !important;
        }

        .category-list-two li a .icon {
            color: #dabd82 !important;
        }

        .category-list-two li a:hover .icon {
            color: #000 !important;
        }

    /* Search News Form */
    .news-form select {
        background-color: #000 !important;
        color: #fff !important;
        border: 1px solid #333 !important;
    }

    .news-form .search-btn {
        width: 100%;
    }

    /* Tags Widget */
    .tag-list li a {
        background-color: #1a1a1a !important;
        color: #ccc !important;
        border: 1px solid #333;
    }

        .tag-list li a:hover {
            background-color: #dabd82 !important;
            color: #000 !important;
            border-color: #dabd82 !important;
        }

    /* Sidebar Cart & Offcanvas Fix */
    .offcanvas, .sidebar-widget-container {
        background-color: #000000 !important;
        color: #fff !important;
    }

        .sidebar-widget-container h6 {
            color: #dabd82 !important;
        }

        .sidebar-widget-container a {
            color: #ccc !important;
        }

            .sidebar-widget-container a:hover {
                color: #dabd82 !important;
