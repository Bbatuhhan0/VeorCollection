<!-- BLOG DETAIL SAYFASI ÖZEL STİLLERİ (BLACK & GOLD) -->
<style>
    /* 1. Genel Sayfa Arka Planı */
    body, html, .page-wrapper, .sidebar-page-container, .gallery-section {
        background-color: #000000 !important;
        color: #ffffff !important;
    }

    /* 2. Page Title (Başlık Alanı) - GOLD TEMA */
    .page-title {
        background-color: #dabd82 !important; /* Gold */
        background-image: none !important;
    }

        .page-title h2 {
            color: #000000 !important;
        }

        .page-title .bread-crumb li, .page-title .bread-crumb li a {
            color: #000000 !important;
        }

            .page-title .bread-crumb li a:hover {
                color: #ffffff !important;
            }

    /* 3. Blog İçerik Alanı */
    .blog-detail .inner-box {
        background-color: transparent !important;
    }

    .blog-detail .lower-content h3,
    .blog-detail .lower-content h4 {
        color: #ffffff !important;
    }

    .blog-detail .lower-content p {
        color: #cccccc !important;
    }

    /* Tarih Kutusu */
    .blog-detail .image .post-date {
        background-color: #dabd82 !important;
        color: #000000 !important;
    }

    /* Meta Bilgileri (Yazar, Yorum sayısı) */
    .post-meta li {
        color: #999 !important;
        border-right: 1px solid #333 !important;
    }

        .post-meta li .icon {
            color: #dabd82 !important;
        }

    /* Alıntı (Blockquote) */
    blockquote {
        background-color: #1a1a1a !important;
        border-left: 4px solid #dabd82 !important;
        color: #ffffff !important;
    }

        blockquote .quote-icon {
            color: #dabd82 !important;
        }

        blockquote .designation {
            color: #dabd82 !important;
        }

    /* Listeler */
    .list-one li {
        color: #ccc !important;
    }

        .list-one li span {
            color: #dabd82 !important; /* Liste başlıkları gold */
